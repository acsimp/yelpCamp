<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!--link a page specific stylesheet based on route attribute "page" e.g. res.render("login", {page: 'login'});-->
    <link rel="stylesheet" type="text/css" href="/stylesheets/<%= typeof page !== 'undefined' ? page : '' %>.css">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <title>YelpCamp</title>
      <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
      <!--<link rel="stylesheet" type="text/css" href="/stylesheets/landing.css">-->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
      <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js" integrity="sha384-SlE991lGASHoBfWbelyBPLsUlwY1GwNDJo3jSJO04KZ33K2bwfV9YBauFfnzvynJ" crossorigin="anonymous"></script>


 
  </head>
    <body>
        
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href="/">YelpCamp</a>
          <ul class="navbar-nav ml-auto">
            <!--<li class="nav-item">-->
            <!--  <a class="nav-link" href="/campgrounds">Campgrounds</a>-->
            <!--</li>-->
            </ul>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
              <a class="nav-link" href="/campgrounds">Campgrounds</a>
            </li>
              <% if(!currentUser){ %>
              <li class="nav-item">
                <a class="nav-link <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %> " href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %> " href="/register">Sign Up</a>
              </li>
              <% }else{ %>
              <li>
                <a class="nav-link" href="/users/<%= currentUser._id %>">Signed In As: <span id="username"><%= currentUser.username %></span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              <% } %>
            </ul>
          </div>
        </nav>
        
        

        
        <div class="container">
          <% if(error && error.length > 0){ %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
          <% } %>
          <% if(success && success.length > 0){ %>
          <div class="alert alert-success" role="alert">
            <%= success %>
          </div>
          <% } %>
        </div>
        
        <div class="container">