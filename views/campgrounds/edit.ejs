<% include ../partials/header %>

    <div class="row"></div>
        <h1 style="text-align:center">Edit <%= campground.name %></h1>
        <div style="width:30%; min-width:250px; margin: 25px auto; ">
            <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= campground.name %>">
                </div>
                    <div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>      
                    <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= campground.image %>">
                </div>
                    <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= campground.description %>">
                </div>
                <!--<div class="form-group">-->
                <!--    <label for="location">Location</label>-->
                <!--    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">-->
                <!--</div>                -->
                <div class="form-group mb-4">
                    <!--<label for="location">Location</label>-->
                    <input  class="form-control" name="location" id="location" placeholder="address" onFocus="geolocate()" value="<%= campground.location %>" type="text">
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
        
    <script src="/js/autocomplete.js" type="text/javascript" async defer></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD1oQHGmok51r3xDT10mXnrvZO6AxIHHt0&libraries=places&callback=initAutocomplete"
        async defer></script>

<% include ../partials/footer %>