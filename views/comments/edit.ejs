<% include ../partials/header %>

    <div class="row"></div>
        <h1 style="text-align:center">Edit Comment</h1>
        <div style="width:30%; min-width:250px; margin: 25px auto; ">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" autofocus>
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= back %>">Go Back</a>
        </div>
    <% include ../partials/footer %>
