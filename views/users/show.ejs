<% include ../partials/header %>

<div class="row">
	<div class="col-md-4">
			<h1><%= user.firstname + " " + user.lastname %></h1>
		<div class="card">
			<img class="card-img-top object-fit_cover" src="<%= user.avatar %>" alt="user profile image">
			<div class="card-body">
			    <a href="mailto:<%= user.email %>"><%= user.email %></a></div>
		</div>
		<% if(currentUser && user.id === String(currentUser._id)){ %>
			<div class="btn-group">
				<a class="btn btn-sm btn-outline-warning" href="/users/<%= user._id %>/edit">Edit</a>
			</div>
		<% } %>
	</div>
	<div class="col-md-8">
		<h3><%= user.username %>'s campgrounds:</h3>
		<ul>
		<% campgrounds.forEach(function(campground) { %>
			<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
		<% }); %>
		</ul>
	</div>
</div>

<% include ../partials/footer %>
